<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    tools:context=".Reports">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBackReports"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="null"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:padding="16dp">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:checkedButton="@id/">

                <RadioButton
                    android:id="@+id/issueNoted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Issue Noted"
                    android:textColor="#41623D"
                    android:paddingStart="10dp"
                    android:button="@drawable/radio_button_box"
                    android:layout_margin="10dp"/>

                <RadioButton
                    android:id="@+id/repairInProcess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repair In Process"
                    android:textColor="#41623D"
                    android:paddingStart="10dp"
                    android:button="@drawable/radio_button_box"
                    android:layout_margin="10dp"/>

                <RadioButton
                    android:id="@+id/completed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed"
                    android:textColor="#41623D"
                    android:paddingStart="10dp"
                    android:button="@drawable/radio_button_box"
                    android:layout_margin="10dp"/>
            </RadioGroup>
        </LinearLayout>


        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginTop="420dp"
            android:layout_marginStart="230dp"
            android:textColor="@color/white"
            android:text="Update"
            android:background="@drawable/gradient_button" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>