<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Side Menu Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/adminbackground"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar with Menu Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Menu"
                android:onClick="openDrawer"
                android:src="@drawable/baseline_menu_24" />

            <!-- Title Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" Admin Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a nice day"
            android:textColor="#A6A6A6"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Horizontal Layout: Contains the two buttons at the top -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="100dp">


                <Button
                    android:id="@+id/btnInstructors"
                    android:layout_width="177dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/activity_user_button"
                    android:textColor="@android:color/black"
                    android:textSize="17sp"
                    android:text="Instructors"
                    android:drawableLeft="@drawable/instructors"
                    android:textAllCaps="false"/>




                <!-- Second Button -->
                <Button
                    android:id="@+id/btnRooms"
                    android:layout_width="170dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/activity_user_button"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@drawable/classroom"
                    android:textSize="17sp"
                    android:text="Classrooms"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!-- Horizontal Layout: Contains button36 and button38 beside each other -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="90dp"
                android:layout_marginTop="2dp">


                <!-- button36 -->
                <Button
                    android:id="@+id/btnReports"
                    android:layout_width="177dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/activity_user_button"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:text="Reports"
                    android:drawableLeft="@drawable/alert"
                    android:textAllCaps="false"
                    />


                <Button
                    android:id="@+id/button38"
                    android:layout_width="176dp"
                    android:layout_height="62dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/activity_user_button"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Side Menu Layout -->
    <LinearLayout
        android:id="@+id/side_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/backgroundd"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date and Time -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Date"
            android:textColor="#A6A6A6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Time"
            android:textColor="#A6A6A6"
            android:textSize="14sp" />

        <!-- Divider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------------------------------"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginVertical="16dp" />

        <!-- Menu Items -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="About"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
