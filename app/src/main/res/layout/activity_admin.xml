<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Side Menu Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar with Menu Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Menu"
                android:onClick="openDrawer"
                android:src="@drawable/baseline_menu_24" /> <!-- Call the function to open drawer -->

            <!-- Title Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" Admin Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a nice day"
            android:textColor="#A6A6A6"
            android:textSize="14sp"
            android:textStyle="bold" />


        <!-- Grid of Dashboard Items -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:columnCount="2"
            android:rowCount="2">

            <!-- Rooms Card -->
            <ImageView
                android:id="@+id/Users"
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:contentDescription="Users"
                android:src="@drawable/users_image" />

            <!-- Units Card -->
            <ImageView
                android:id="@+id/Rooms"
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:padding="20dp"
                android:src="@drawable/categories_image" />

            <!-- Low Stock Alerts Card -->
            <ImageView
                android:id="@+id/Reports"
                android:layout_width="149dp"
                android:layout_height="157dp"
                android:padding="20dp"
                android:src="@drawable/currentstock_image" />

        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/side_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:textColor="#A6A6A6"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="#A6A6A6"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------------------------------"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
        <!-- Menu Item -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="About"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
