<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Side Menu Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_6"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar with Menu Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Menu"
                android:onClick="openDrawer"
                android:src="@drawable/baseline_menu_24" />

        </LinearLayout>

        <!-- Greeting Text -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Horizontal Layout: Contains the two buttons at the top -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginBottom="60dp">

                <Button
                    android:id="@+id/btnInstructors"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/activity_user_button"
                    android:drawableLeft="@drawable/instructors"
                    android:paddingStart="20dp"
                    android:paddingEnd="130dp"
                    android:text="Instructors"
                    android:textAllCaps="false"
                    android:textColor="#41623D"
                    android:textSize="20sp" />

                <!-- Second Button -->
                <Button
                    android:id="@+id/btnRooms"
                    android:layout_width="350dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/activity_user_button"
                    android:textColor="#41623D"
                    android:drawableLeft="@drawable/classroom"
                    android:textSize="20sp"
                    android:paddingEnd="130dp"
                    android:text="Classrooms"
                    android:paddingStart="20dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btnReports"
                    android:layout_width="350dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/activity_user_button"
                    android:textColor="#41623D"
                    android:textSize="20sp"
                    android:paddingEnd="160dp"
                    android:text="Reports"
                    android:drawableLeft="@drawable/alert"
                    android:paddingStart="20dp"
                    android:textAllCaps="false"
                    />

                <Button
                    android:id="@+id/button38"
                    android:layout_width="350dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/activity_user_button"
                    android:drawableLeft="@drawable/update"
                    android:paddingStart="30dp"
                    android:text="Updates"
                    android:paddingEnd="140dp"
                    android:textColor="#41623D"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    />

            </LinearLayout>

            <!-- Horizontal Layout: Contains button36 and button38 beside each other -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="90dp"
                android:layout_marginTop="2dp">


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Side Menu Layout -->
    <LinearLayout
        android:id="@+id/side_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/backgroundd"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date and Time -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Date"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Time"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Divider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---------------------------------"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginVertical="16dp" />

        <!-- Menu Items -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="About"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Logout"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
