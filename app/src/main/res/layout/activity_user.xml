<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/UserDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_8"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar with Menu Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Menu"
                android:onClick="openDrawer"
                android:src="@drawable/baseline_menu_24" />
        </LinearLayout>

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/UserwelcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a nice day!"
            android:textColor="#A6A6A6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Button Layout to Center Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="400dp">

                <Button
                    android:id="@+id/btnUserRooms"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_user_button"
                    android:textColor="#41623D"
                    android:drawableLeft="@drawable/classroom"
                    android:paddingStart="20dp"
                    android:paddingEnd="130dp"
                    android:layout_margin="20dp"
                    android:textSize="20sp"
                    android:text="Classrooms"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnUserReports"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/activity_user_button"
                    android:paddingStart="20dp"
                    android:paddingEnd="160dp"
                    android:textColor="#41623D"
                    android:textSize="20sp"
                    android:text="Reports"
                    android:drawableLeft="@drawable/alert"
                    android:textAllCaps="false" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Side Menu Layout -->
    <LinearLayout
        android:id="@+id/Userside_menu"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/backgroundd"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date and Time -->
        <TextView
            android:id="@+id/UserdateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Date"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/usertimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Time"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Divider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="---------------------------------"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginVertical="16dp" />

        <!-- Menu Items -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="About"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/UserlogOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Logout"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
