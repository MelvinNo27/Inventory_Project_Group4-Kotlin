<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/UserDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Side Menu Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backg"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Bar with Menu Icon and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Hamburger Menu Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Menu"
                android:onClick="openDrawer"
                android:src="@drawable/baseline_menu_24" />

            <!-- Title Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text=" Admin Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/UserwelcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a nice day"
            android:textColor="#A6A6A6"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!-- Horizontal Layout: Contains the two buttons at the top -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="50dp">


                <!-- Second Button -->
                <Button
                    android:id="@+id/btnUserRooms"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:paddingStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/frame"
                    android:drawableTint="#41623D"
                    android:textColor="#41623D"
                    android:drawableLeft="@drawable/classroom"
                    android:textSize="17sp"
                    android:text="classrooms"
                    android:textAllCaps="false"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="25dp">

                <!-- button36 -->
                <Button
                    android:id="@+id/btnUserReports"
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/frame"
                    android:drawableTint="#41623D"
                    android:textColor="#41623D"
                    android:textSize="18sp"
                    android:paddingStart="15dp"
                    android:text="Reports"
                    android:drawableLeft="@drawable/alert"
                    android:textAllCaps="false"
                    />

            </LinearLayout>

            <!-- Horizontal Layout: Contains button36 and button38 beside each other -->


        </LinearLayout>

    </LinearLayout>

    <!-- Side Menu Layout -->
    <LinearLayout
        android:id="@+id/Userside_menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date and Time -->
        <TextView
            android:id="@+id/UserdateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Date"
            android:textColor="#A6A6A6"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/usertimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Time"
            android:textColor="#A6A6A6"
            android:textSize="14sp" />

        <!-- Divider -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="----------------------------------------"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginVertical="16dp" />

        <!-- Menu Items -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="About"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/UserlogOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
