<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1">

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto"
        android:text="ROOM 14"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Center Image -->
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/monitor"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Scrollable Button List -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        app:layout_constraintBottom_toTopOf="@id/buttonRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Left Column -->
            <LinearLayout
                android:id="@+id/linearLayoutLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Buttons for Units 1-15 -->
                <Button android:id="@+id/button1" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 1" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button2" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 2" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button3" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 3" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button4" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 4" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button5" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 5" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button6" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 6" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button7" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 7" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button8" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 8" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button9" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 9" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button10" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 10" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button11" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 11" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button12" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 12" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button13" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 13" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button14" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 14" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button15" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 15" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:id="@+id/linearLayoutRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Buttons for Units 16-30 -->
                <Button android:id="@+id/button16" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 16" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button17" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 17" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button18" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 18" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button19" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 19" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button20" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 20" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button21" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 21" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button22" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 22" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button23" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 23" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button24" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 24" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button25" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 25" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button26" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 26" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button27" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 27" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button28" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 28" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button29" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 29" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button30" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 30" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:id="@+id/linearLayoutSuperRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Buttons for Units 31-40 -->
                <Button android:id="@+id/button31" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 31" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button32" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 32" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button33" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 33" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button34" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 34" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button35" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 35" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button36" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 36" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button37" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 37" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button38" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 38" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button39" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 39" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button40" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 40" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Report Button -->
    <Button
        android:id="@+id/buttonRequest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="REPORT"
        android:textColor="#FFFFFF"
        android:backgroundTint="#22177A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
