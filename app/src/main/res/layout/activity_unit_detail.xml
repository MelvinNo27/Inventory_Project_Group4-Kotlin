<LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:orientation="vertical"
            android:background="@drawable/bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/RoomBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                   android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/baseline_arrow_black_back_24" />

                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="80dp"
                    android:src="@drawable/unite" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="400dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/monitor_1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ID"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/ListMonitorID"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_background"
                            android:textColor="@color/white"
                            android:layout_marginEnd="10dp"
                            android:textColorHint="#BDBABA"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Quantity"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:layout_marginBottom="8sp"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/MonitorQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/edit_text_background"
                            android:textColor="@color/white"
                            android:layout_marginTop="1dp"
                            android:textColorHint="#BDBABA"
                            android:textSize="13sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/mouse" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ListMouseID"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />



                    <TextView
                        android:id="@+id/MouseQuantity"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/keyboard" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ListKeyboardID"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />



                    <TextView
                        android:id="@+id/KeyboardQuantity"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/mousepad" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ListMousePadID"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />



                    <TextView
                        android:id="@+id/mousePadQuantity"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/unit" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ListUnitID"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />



                    <TextView
                        android:id="@+id/unitQuantity"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:textColorHint="#BDBABA"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_text_background"
        android:text="Edit"
        android:layout_gravity="center"
        android:textStyle="bold"/>

</LinearLayout>
