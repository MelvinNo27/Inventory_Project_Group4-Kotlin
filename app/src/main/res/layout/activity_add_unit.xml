<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/unite" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="-220dp"
        android:layout_marginTop="160dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/unite" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/unite"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/unite" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/unite"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/unite" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="172dp"
        android:layout_height="400dp"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="170dp"
            tools:layout_editor_absoluteY="188dp" />


        <EditText
            android:id="@+id/monitorID"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/mouseID"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"
            android:textColorHint="#BDBABA"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/keyboardID"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:textSize="13sp"
            android:layout_marginBottom="40dp" />

        <EditText
            android:id="@+id/mousePadID"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:layout_marginBottom="40dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/unitID"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:textSize="13sp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="90dp"
        android:layout_height="400dp"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/MonitorQuantity"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:layout_marginBottom="40dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/MouseQuantity"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"
            android:textColorHint="#BDBABA"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/KeyboardQuantity"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:layout_marginBottom="40dp"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/mousePadQuantity"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:textSize="13sp"
            android:layout_marginBottom="40dp" />

        <EditText
            android:id="@+id/unitQuantity"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/white"
            android:textColorHint="#BDBABA"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>