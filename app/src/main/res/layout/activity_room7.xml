<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/Room7back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_arrow_black_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/roboto"
        android:text="ROOM 7"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Center Image -->
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/unite"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Button List -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        app:layout_constraintBottom_toTopOf="@id/buttonRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:padding="8dp">

            <!-- Left Column -->
            <LinearLayout
                android:id="@+id/linearLayoutLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Buttons for Units 1-10 -->
                <Button android:id="@+id/button1" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 1" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button2" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 2" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button3" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 3" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button4" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 4" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button5" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 5" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button6" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 6" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button7" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 7" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button8" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 8" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button9" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 9" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button10" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 10" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:id="@+id/linearLayoutRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Buttons for Units 11-16 -->
                <Button android:id="@+id/button11" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 11" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button12" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 12" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button13" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 13" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button14" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 14" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button15" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 15" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
                <Button android:id="@+id/button16" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginVertical="4dp" android:text="Unit 16" android:textColor="@color/white" android:backgroundTint="@color/cardview_dark_background" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Report Button -->
    <Button
        android:id="@+id/buttonRequest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="REPORT"
        android:textColor="#FFFFFFFF"
        android:backgroundTint="#22177A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
